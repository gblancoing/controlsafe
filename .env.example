# ============================================
# ControlSafe - Variables de Entorno
# ============================================
# Copia este archivo a .env.local y completa los valores

# Base de datos MySQL
# Formato: mysql://usuario:contraseña@host:puerto/nombre_base_datos
# Ejemplo local: mysql://root:password@localhost:3306/controlsafe
# Ejemplo remoto: mysql://user:pass@host.database.com:3306/controlsafe
DATABASE_URL="mysql://root:password@localhost:3306/controlsafe"

# Sesión (login con MySQL). Al menos 32 caracteres aleatorios.
# Generar con: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET="cambiar-por-una-cadena-aleatoria-de-al-menos-32-caracteres"

# Google GenAI API Key (para Genkit AI)
GOOGLE_GENAI_API_KEY="tu-api-key-aqui"

# Firebase (opcional - si decides mantenerlo)
# FIREBASE_PROJECT_ID="tu-proyecto"
# FIREBASE_CLIENT_EMAIL="tu-email"
# FIREBASE_PRIVATE_KEY="tu-clave-privada"

# Configuración SMTP para envío de emails (recuperar contraseña, notificaciones)
# cPanel "Secure SSL/TLS (Recomendado)" → usar SMTP_PORT=465
# Si tu proveedor usa STARTTLS → usar SMTP_PORT=587
SMTP_HOST="mail.carenvp.cl"
SMTP_PORT="465"
SMTP_USER="controlsafe@carenvp.cl"
SMTP_PASSWORD="Inging1989$$"
SMTP_FROM="ControlSafe"

# URL de la aplicación (se embebe en el build; usar la correcta antes de npm run build:prod:zip)
# Desarrollo: http://localhost:9002
# Producción: https://controlsafe.carenvp.cl (o tu dominio)
NEXT_PUBLIC_APP_URL="http://localhost:9002"
